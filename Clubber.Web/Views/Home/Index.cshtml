<script>
    // Load live statistics
    async function loadLiveStats() {
        try {
            // Load registered users count
            const usersResponse = await fetch('/users');
            const users = await usersResponse.json();
            document.getElementById('live-users').textContent = users.length.toLocaleString();
            
            // Load recent news count
            const newsResponse = await fetch('/dailynews');
            const news = await newsResponse.json();
            document.getElementById('live-news').textContent = news.length.toLocaleString();
            
            // Load best splits count
            const splitsResponse = await fetch('/bestsplits');
            const splits = await splitsResponse.json();
            document.getElementById('live-splits').textContent = splits.length.toLocaleString();
            
            // Set a default for peaks (since we don't have an endpoint for it in the original code)
            document.getElementById('live-peaks').textContent = '15+';
            
        } catch (error) {
            console.error('Error loading live stats:', error);
            // Set fallback values
            document.getElementById('live-users').textContent = '1,200+';
            document.getElementById('live-news').textContent = '25+';
            document.getElementById('live-splits').textContent = '14';
            document.getElementById('live-peaks').textContent = '15+';
        }
    }
    
    // Load stats when page loads
    document.addEventListener('DOMContentLoaded', loadLiveStats);
    
    // Add animation on scroll
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('animate-slide-up');
            }
        });
    }, observerOptions);
    
    // Observe all feature cards
    document.querySelectorAll('.custom-shadow').forEach(card => {
        observer.observe(card);
    });
</script>
