<script>
	const apiExamples = {
		users: {
			leaderboardId: 312313,
			discordId: "123456789",
			twitchUsername: "ClubberTTV"
		},
		bestsplits: {
			"name": "800",
			"time": 800,
			"value": 176,
			"description": "Chupacabra 944.6135",
			"gameInfo": {
				"player_name": null,
				"id": 0,
				"etc": "etc"
			}
		},
		dailynews: {
			leaderboardId: 118832,
			timeOfOccurenceUtc: "2024-01-15T14:30:00Z",
			nth: 5
		}
	};

	document.addEventListener('DOMContentLoaded', function () {
		document.querySelectorAll('.api-endpoint').forEach(endpoint => {
			endpoint.addEventListener('click', () => {
				const endpointType = endpoint.dataset.endpoint;
				const responseElement = document.getElementById('api-response');

				document.querySelectorAll('.api-endpoint').forEach(ep => {
					ep.classList.remove('border-blue-500', 'dark:border-blue-400');
				});

				endpoint.classList.add('border-blue-500', 'dark:border-blue-400');

				const exampleData = apiExamples[endpointType];
				responseElement.innerHTML = `<code>${JSON.stringify(exampleData, null, 2)}</code>`;
			});
		});

		let statsLoaded = false;

		const statsObserver = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting && !statsLoaded) {
					statsLoaded = true;
					loadLiveStats();
				}
			});
		}, {threshold: 0.3});

		const statsContainer = document.getElementById('stats-container');
		if (statsContainer) {
			statsObserver.observe(statsContainer);
		}
	});

	async function loadLiveStats() {
		try {
			const usersResponse = await fetch('/user-count');
			const userCountText = await usersResponse.text();
			console.log('User count:', userCountText);
			animateCounter('live-users', userCountText);

			const newsResponse = await fetch('/dailynews');
			const news = await newsResponse.json();
			animateCounter('live-news', news.length);

			const splitsResponse = await fetch('/bestsplits');
			const splits = await splitsResponse.json();
			animateCounter('live-splits', splits.length);

			animateCounter('live-peaks', 15, '+');

		} catch (error) {
			console.error('Error loading stats:', error);
			animateCounter('live-users', 900, '+');
			animateCounter('live-news', 0);
			animateCounter('live-splits', 14);
			animateCounter('live-peaks', 15, '+');
		}
	}

	function animateCounter(elementId, targetValue, suffix = '') {
		const element = document.getElementById(elementId);
		if (!element) return;

		let currentValue = 0;
		const increment = Math.ceil(targetValue / 30);
		const timer = setInterval(() => {
			currentValue += increment;
			if (currentValue >= targetValue) {
				currentValue = targetValue;
				clearInterval(timer);
			}
			element.textContent = currentValue.toLocaleString() + suffix;
		}, 50);
	}

	const observerOptions = {
		threshold: 0.1,
		rootMargin: '0px 0px -50px 0px'
	};

	const observer = new IntersectionObserver((entries) => {
		entries.forEach(entry => {
			if (entry.isIntersecting) {
				entry.target.classList.add('animate-slide-up');
			}
		});
	}, observerOptions);

	document.querySelectorAll('.bg-white.dark\\:bg-gray-800').forEach(card => {
		observer.observe(card);
	});
</script>
