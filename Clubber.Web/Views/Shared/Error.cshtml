<div class="min-h-screen py-20 bg-gray-50 flex items-center">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="bg-white rounded-2xl shadow-2xl p-8 md:p-12">
            <div class="w-24 h-24 mx-auto bg-gradient-to-r from-red-500 to-red-600 rounded-2xl flex items-center justify-center mb-6">
                <i class="text-white text-3xl"></i>
            </div>
            
            <h1 class="text-4xl font-bold mb-4 text-gray-900">
                Oops! Something went wrong
            </h1>
            
            <p class="text-xl text-gray-600 mb-8">
                We encountered an unexpected error while processing your request.
            </p>
            
            @if (Model.ShowRequestId == true)
            {
                <div class="bg-gray-100 rounded-xl p-4 mb-6">
                    <p class="text-sm text-gray-600">
                        <strong>Request ID:</strong> <code class="font-mono">@Model.RequestId</code>
                    </p>
                </div>
            }
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/" class="px-8 py-3 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-xl transition-all duration-300 transform hover:scale-105">
                    <i class="mr-2"></i>
                    Go Home
                </a>
                <a href="javascript:history.back()" class="px-8 py-3 bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold rounded-xl transition-all duration-300">
                    <i class="mr-2"></i>
                    Go Back
                </a>
            </div>
            
            <div class="mt-8 text-sm text-gray-500">
                If this problem persists, please contact us on the 
                <a href="https://discord.gg/jMRumVerj2" target="_blank" class="text-red-500 hover:text-red-600">DD Pals Discord</a>
            </div>
        </div>
    </div>
</div>
